<%- include('header') %>
<h2>Editar vaga: <a href="/admin/vagas">Voltar</a></h2>
<div>
  <form method="post">
    <label for="titulo">Titulo</label>
    <input type="text" name="titulo" value="<%= vaga.titulo %>">
    <br>
    <label for="descricao">Descrição</label>
    <textarea name="descricao" cols="30" rows="10"><%= vaga.descricao %></textarea>
    <br>
    <label for="categoria">Categoria: </label>
    <select name="categoria" id="">
      <% categorias.forEach(categoria => { %>
      <option value="<%= categoria.id %>" <% if(categoria.id === vaga.id){ %> selected <% } %>>
        <%= categoria.categoria %></option>
      <% }) %>
    </select>

    <br>

    <button>Editar</button>
  </form>
</div>
<%- include('footer') %>
